<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wine"
    tools:context=".MainActivity"
    android:id="@+id/main">

    <TextView
        android:id="@+id/lblNP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/label_nums_primos"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/grey_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lblNP"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#880E4F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblNP"
        android:layout_marginTop="20dp">

        <!-- inputType y digits hace que salga un teclado numerico -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/entradaNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:digits="1234567890"
            android:layout_marginStart="100sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20sp"
            android:visibility="visible"
            android:hint="@string/hint_entrada"
            android:textColorHint="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInput1"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/salidaNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#880E4F"

        android:textColor="@color/grey_light"
        android:textColorHint="@color/grey_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/btnDevolver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInput1"
        android:padding="25sp"
        android:gravity="center_horizontal"
        ></TextView>

    <Button
        android:id="@+id/btnDevolver"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey_light"
        android:text="@string/devolver"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/salidaNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="230sp"
        android:clickable="true"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>